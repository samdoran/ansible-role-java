Vagrant.configure(2) do |config|

  # CentOS 6
  config.vm.define "java-el6" do |centos6|
    centos6.vm.box = "geerlingguy/centos6"
    centos6.vm.hostname = "java-centos6"
    config.vm.provider "virtualbox" do |vbox|
      vbox.name = "java-el6"
      vbox.cpus = 1
      vbox.memory = 128
    end
  end

  # CentOS 7
  config.vm.define "java-el7" do |centos7|
    centos7.vm.box = "geerlingguy/centos7"
    centos7.vm.hostname = "java-centos7"
    config.vm.provider "virtualbox" do |vbox|
      vbox.name = "java-el7"
      vbox.cpus = 1
      vbox.memory = 128
    end
  end

  # Ubuntu 12.04
  config.vm.define "java-ub12" do |node|
    node.vm.box = "geerlingguy/ubuntu1204"
    node.vm.hostname = "java-ub12"
    config.vm.provider "virtualbox" do |vbox|
      vbox.name = "java-ub12"
      vbox.cpus = 1
      vbox.memory = 128
    end
  end

  # Ubuntu 14.04
  config.vm.define "java-ub14" do |ub14|
    ub14.vm.box = "geerlingguy/ubuntu1404"
    ub14.vm.hostname = "java-ub14"
    config.vm.provider "virtualbox" do |vbox|
      vbox.name = "java-ub14"
      vbox.cpus = 1
      vbox.memory = 128
    end
  end

  # Ubuntu 16.04
  config.vm.define "java-ub16" do |ub16|
    ub16.vm.box = "geerlingguy/ubuntu1604"
    ub16.vm.hostname = "java-ub16"
    config.vm.provider "virtualbox" do |vbox|
      vbox.name = "java-ub16"
      vbox.cpus = 1
      vbox.memory = 128
    end
  end

  config.vm.provision "ansible" do |ansible|
    ansible.playbook = "vagrant.yml"
  end

end
